{
  "name": "insinger-backend",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zimmerman-zimmerman/insinger-backend.git"
  },
  "dependencies": {
    "@types/colors": "^1.2.1",
    "axios": "^0.19.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.2",
    "mongoose-auto-increment": "^5.0.1",
    "multer": "^1.4.2",
    "node-cron": "^2.0.3",
    "nodemon": "^2.0.2",
    "postmark": "2.5.0",
    "react": "^16.13.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "start-server-and-test": "^1.11.0",
    "ts-node": "^8.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.11",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "depcheck": "^0.9.2",
    "dotenv-extended": "^2.8.0",
    "eslint-config-airbnb-typescript-prettier": "^1.4.2",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "fork-ts-checker-webpack-plugin": "^4.0.5",
    "getenv": "^1.0.0",
    "husky": "^4.2.3",
    "jest": "^26.0.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "source-map-explorer": "^2.3.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "depcheck": "depcheck",
    "start": "nodemon --watch 'server/' --ignore 'server/__test__' --exec ts-node --project 'nodetsconfig.json' server/server.ts",
    "test-api": "jest --detectOpenHandles --runTestsByPath ./server/__test__/*.spec.ts",
    "start-back-test": "ts-node --project 'nodetsconfig.json' server/server",
    "start-test-api": "start-server-and-test start-back-test http://localhost:4200/api test-api",
    "import-data": "ts-node --project 'nodetsconfig.json' server/scripts/load_initial_data.ts",
    "check-invite-new-users": "ts-node --project 'nodetsconfig.json' server/scripts/check_invite_new_users.ts",
    "check-notify-user-projects": "ts-node --project 'nodetsconfig.json' server/scripts/check_notify_user_projects.ts"
  },
  "eslintConfig": {
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "server"
          ]
        }
      }
    },
    "parserOptions": {
      "project": "./tsconfig.json",
      "tsconfigRootDir": "./"
    },
    "extends": [
      "react-app",
      "airbnb-typescript-prettier"
    ],
    "rules": {
      "import/prefer-default-export": 0,
      "react-hooks/exhaustive-deps": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-ignore ": 0,
      "@typescript-eslint/no-unused-vars": 0,
      "no-restricted-imports": [
        "error",
        {
          "paths": [
            {
              "name": "styled-components",
              "message": "Please import from styled-components/macro."
            }
          ],
          "patterns": [
            "!styled-components/macro"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "no-shadow": "off",
          "no-unused-vars": "off",
          "react/destructuring-assignment": 0,
          "react/jsx-fragments": 0,
          "react/jsx-props-no-spreading": 0,
          "react-hooks/exhaustive-deps": 0,
          "@typescript-eslint/no-explicit-any": 0,
          "@typescript-eslint/ban-ts-ignore ": 0,
          "@typescript-eslint/no-unused-vars": 0,
          "@typescript-eslint/no-empty-function": 0,
          "no-underscore-dangle": "off",
          "no-useless-escape": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "proxy": "http://localhost:4200"
}
